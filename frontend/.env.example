# Frontend Environment Variables
# Copy this file to .env and fill in your values

# Backend API URL
VITE_BACKEND_URL=http://localhost:3001

# Blockchain RPC URL (for development: Ganache, for production: Infura/Alchemy)
VITE_RPC_URL=http://127.0.0.1:7545

# Contract Address (deploy contract and paste address here)
VITE_CONTRACT_ADDRESS=0xYourContractAddressHere

# Network Configuration
VITE_CHAIN_ID=1337
VITE_CHAIN_NAME=Ganache Local

# For Sepolia Testnet Deployment:
# VITE_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# VITE_CHAIN_ID=11155111
# VITE_CHAIN_NAME=Sepolia Testnet
# VITE_CONTRACT_ADDRESS=0xYourSepoliaContractAddress

# For Production with Infura:
# Get free API key from: https://infura.io/
# VITE_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
