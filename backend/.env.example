# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# For production deployment:
# FRONTEND_URL=https://your-voting-app.vercel.app

# Pinata IPFS Configuration
# Get your keys from: https://pinata.cloud/
PINATA_API_KEY=your_pinata_jwt_token_here

# Optional: Legacy API keys (if using old Pinata API)
PINATA_API_KEY_LEGACY=your_api_key
PINATA_SECRET_KEY_LEGACY=your_secret_key

# Contract Address (same as frontend)
CONTRACT_ADDRESS=0xYourContractAddressHere
